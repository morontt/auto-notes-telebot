{% extends "base.html.twig" %}

{% block title %}СТО/Работа | Автоблокнот{% endblock %}

{% block headerline %}СТО/Работа{% endblock %}

{% block body %}
    <table class="striped">
        <thead>
            <tr>
                <th></th>
                <th>Дата</th>
                <th></th>
                <th></th>
                <th>Пробег</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if items|length > 0 %}
            {% set idx = offset %}
            {% for item in items %}
                {% set idx = idx + 1 %}
                <tr>
                    <td class="idx">{{ idx }}</td>
                    <td>{{ item.date|date('Y-m-d') }}</td>
                    <td>{{ item.car.name }}</td>
                    <td>
                        {% if item.cost %}
                            {{ item.cost.value|number_format(2, '.', '') }} {{ item.cost.currencyCode|currency_symbol }}
                        {% else %}-{% endif %}
                    </td>
                    <td>{% if item.distance > 0 %}{{ item.distance }}{% else %}-{% endif %}</td>
                    <td>
                        &#x2027; <a href="{{ path('service_edit', {id: item.id}) }}">&#x270D;&#xFE0F;</a>
                        &#x2027;
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td colspan=4>{{ item.description }}</td>

                    <td></td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="8" style="text-align: center">Нет данных</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    {{ pagination(items.paginationMeta, 'service_list') }}
    <p>
        Добавить запись &rarr; <a href="{{ path('service_add') }}">&#x1F527;</a>
    </p>
{% endblock %}
