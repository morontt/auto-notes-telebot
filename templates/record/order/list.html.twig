{% extends "base.html.twig" %}

{% block title %}Заказы | Автоблокнот{% endblock %}

{% block headerline %}Заказы{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Дата</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th>Авто</th>
                <th>Пробег</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if orders|length > 0 %}
            {% set idx = offset %}
            {% for item in orders %}
                {% set idx = idx + 1 %}
                <tr>
                    <td class="idx">{{ idx }}</td>
                    <td>{{ item.date|date('Y-m-d') }}</td>
                    <td>{{ item.description }}</td>
                    <td>{{ item.capacity }}</td>
                    <td>{{ item.type.name }}</td>
                    <td>{{ item.cost.value|number_format(2, '.', '') }} {{ item.cost.currencyCode|currency_symbol }}</td>
                    <td>{% if item.car %}{{ item.car.name }}{% else %}-{% endif %}</td>
                    <td>{% if item.distance > 0 %}{{ item.distance }}{% else %}-{% endif %}</td>
                    <td>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="8" style="text-align: center">Нет данных</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    {{ pagination(orders.paginationMeta, 'order_list') }}
    <p>
{#        Добавить запись &rarr; <a href="{{ path('fuel_add') }}">&#x26FD;</a>#}
    </p>
{% endblock %}
