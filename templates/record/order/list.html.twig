{% extends "base.html.twig" %}

{% block title %}Заказы | Автоблокнот{% endblock %}

{% block headerline %}Заказы{% endblock %}

{% block body %}
    {% include 'nav.html.twig' %}
    <table class="striped">
        <thead>
            <tr>
                <th></th>
                <th>Дата</th>
                <th></th>
                <th></th>
                <th>Пробег</th>
                <th>Исп.</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if orders|length > 0 %}
            {% set idx = offset %}
            {% for item in orders %}
                {% set idx = idx + 1 %}
                <tr>
                    <td class="idx">{{ idx }}</td>
                    <td>{{ item.date|date('Y-m-d') }}</td>
                    <td>{% if item.type %}{{ item.type.name }}{% endif %}</td>
                    <td>{{ item.cost.value|number_format(2, '.', '') }} {{ item.cost.currencyCode|currency_symbol }}</td>
                    <td>{% if item.distance > 0 %}{{ item.distance }}{% else %}-{% endif %}</td>
                    <td>{% if item.usedAt %}{{ item.usedAt|date('Y-m-d') }}{% else %}-{% endif %}</td>
                    <td>
                        &#x2027; <a href="{{ path('order_edit', {id: item.id}) }}">&#x270D;&#xFE0F;</a>
                        &#x2027;
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td colspan="3">{{ item.description }}</td>
                    <td>{{ item.capacity }}</td>
                    <td>{% if item.car %}{{ item.car.name }}{% else %}-{% endif %}</td>
                    <td></td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="8" style="text-align: center">Нет данных</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    {{ pagination(orders.paginationMeta, 'order_list') }}
    <p>
        Добавить запись &rarr; <a href="{{ path('order_add') }}">&#x1F9FE;</a>
    </p>
{% endblock %}
