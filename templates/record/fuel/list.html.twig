{% extends "base.html.twig" %}

{% block title %}Топливо | Автоблокнот{% endblock %}

{% block headerline %}Топливо{% endblock %}

{% block body %}
    {% include 'nav.html.twig' %}
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Дата</th>
                <th>Объём</th>
                <th></th>
                <th>АЗС</th>
                <th></th>
                <th>Авто</th>
                <th>Пробег</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if fuels|length > 0 %}
            {% set idx = offset %}
            {% for item in fuels %}
                {% set idx = idx + 1 %}
                <tr>
                    <td class="idx">{{ idx }}</td>
                    <td>{{ item.date|date('Y-m-d') }}</td>
                    <td>{{ item.value|number_format(2, '.', '') }}</td>
                    <td>{{ item.type.name }}</td>
                    <td>{{ item.station.name }}</td>
                    <td>{{ item.cost.value|number_format(2, '.', '') }} {{ item.cost.currencyCode|currency_symbol }}</td>
                    <td>{% if item.car %}{{ item.car.name }}{% else %}-{% endif %}</td>
                    <td>{% if item.distance > 0 %}{{ item.distance }}{% else %}-{% endif %}</td>
                    <td>
                        &#x2027; <a href="{{ path('fuel_edit', {id: item.id}) }}">&#x270D;&#xFE0F;</a>
                        <!-- &#x2027; <a href="{{ path('fuel_edit', {id: item.id}) }}">&#x1F5D1;&#xFE0F;</a> -->
                        &#x2027;
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="8" style="text-align: center">Нет данных</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    {{ pagination(fuels.paginationMeta, 'fuel_list') }}
    <p>
        Добавить запись &rarr; <a href="{{ path('fuel_add') }}">&#x26FD;</a>
    </p>
{% endblock %}
