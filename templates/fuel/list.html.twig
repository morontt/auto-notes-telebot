{% extends "base.html.twig" %}

{% block title %}Топливо | Автоблокнот{% endblock %}

{% block headerline %}Топливо{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Дата</th>
                <th>Объём</th>
                <th></th>
                <th>АЗС</th>
                <th></th>
                <th>Авто</th>
                <th>Пробег</th>
            </tr>
        </thead>
        <tbody>
        {% if fuels|length > 0 %}
            {% set idx = offset %}
            {% for fuel in fuels %}
                {% set idx = idx + 1 %}
                <tr>
                    <td class="idx">{{ idx }}</td>
                    <td>{{ fuel.date|date('Y-m-d') }}</td>
                    <td>{{ fuel.value|number_format(2, '.', '') }}</td>
                    <td>{{ fuel.type.name }}</td>
                    <td>{{ fuel.station.name }}</td>
                    <td>{{ fuel.cost.value|number_format(2, '.', '') }} {{ fuel.cost.currencyCode|currency_symbol }}</td>
                    <td>{% if fuel.car %}{{ fuel.car.name }}{% else %}-{% endif %}</td>
                    <td>{% if fuel.distance > 0 %}{{ fuel.distance }}{% else %}-{% endif %}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="8" style="text-align: center">Нет данных</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    {{ pagination(fuels.paginationMeta, 'fuel_list') }}
    <p>
        Добавить запись &rarr; <a href="{{ path('fuel_add') }}">&#x26FD;</a>
    </p>
{% endblock %}
