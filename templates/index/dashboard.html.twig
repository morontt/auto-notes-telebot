{% extends "base.html.twig" %}

{% block title %}Дашборд | Автоблокнот{% endblock %}

{% block headerline %}Дашборд{% endblock %}

{% block body %}
    <p>Топливо:</p>
    <table>
        <thead>
            <tr>
                <th>Дата</th>
                <th>Объём</th>
                <th>АЗС</th>
                <th></th>
                <th>Авто</th>
                <th>Пробег</th>
            </tr>
        </thead>
        <tbody>
        {% if fuels|length > 0 %}
            {% for fuel in fuels %}
            <tr>
                <td>{{ fuel.date|date('Y-m-d') }}</td>
                <td>{{ fuel.value|number_format(2, '.', '') }}</td>
                <td>{{ fuel.station.name }}</td>
                <td>{{ fuel.cost.value|number_format(2, '.', '') }} {{ fuel.cost.currencyCode }}</td>
                <td>{{ fuel.car.name }}</td>
                <td>{% if fuel.distance > 0 %}{{ fuel.distance }}{% else %}-{% endif %}</td>
            </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="6" style="text-align: center">Нет данных</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}
